# 设备名称、代号和基础配置
KERNEL_NAME=grus_sukisu_a15
DEFCONFIG=vendor/grus_defconfig
DTBO_PATH=arch/arm64/boot/dtbo.img
DTB_PATH=arch/arm64/boot/dts/qcom
IMAGE_PATH=arch/arm64/boot/Image.gz-dtb
NEED_DTBO=true

# 内核源码地址（你所提供的 LineageOS 内核源码）
KERNEL_SOURCE=https://github.com/LineageOS/android_kernel_xiaomi_sdm710

# 编译的内核版本
KERNEL_VERSION=4.9

# KernelSU 配置：使用 SukiSU-Ultra 分支（已集成到 release 流程中）
KSU_TYPE=sukisu

# 打包方式：AnyKernel3 打包
PACK_TYPE=AnyKernel3

# 集成 SuSFS（仅需要 SuSFS，不集成 LXC、VFS）
USE_SUSFS=true

# Android 版本信息
ANDROID_VERSION=15

# 系统类型
OS_TYPE=LineageOS
